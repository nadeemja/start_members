		$block[0]["info"] = t("Memberlist Block");
	}

}//function _block

//define page
function start_members_all(){

	
	//This variable comes from the domain-access module and tells us the current domain
	global $_domain;
	
	//init content
	$page_content = '';
	$page_content .= dpm($_domain);
	
	//query to get all users
	$q = db_query("
					SELECT *
					FROM {users_roles}, {role}, {users}
					WHERE {role.name} = '$_domain[subdomain]'
					AND {role.rid} = {users_roles.rid}
					AND {users_roles.uid} = {users.uid}
				");
	
	
	//alternate query
	$q = db_query("
					SELECT 
						users.uid, name, mail, is_admin, node.nid, og_description, title, profile_values.value 
					
					FROM 
						users, og_uid, og, node, profile_values 
					
					WHERE 
						users.uid = og_uid.uid 
						AND og_uid.nid = og.nid 
						AND og.nid = node.nid 
						AND node.uid != users.uid 
						AND profile_values.uid = users.uid 
						AND profile_values.fid in (6,2,3)
							
					
				");
		
	//Loop and add to page_content
	while ($user = db_fetch_array($q)){
		
		
		$page_content .= dpm($user);
		
		
	}
	

	return $page_content;
}//_all()

//Menu links
function start_members_menu(){
	
	$items = array();
	
	//all page
	$items['start_members'] = array(
		'title' 			=> 'Start members',
		'page callback' 	=> 'start_members_all',
		'access arguments' 	=> array('access start members'),
		'type'				=> MENU_CALLBACK
	);
	
	return $items;
}
